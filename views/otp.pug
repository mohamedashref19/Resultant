extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Enter Verification Code
      p(style="text-align: center; margin-bottom: 20px;") We sent a code to your email.
      
      form.form.form--otp
        .form__group
          label.form__label(for='otp') OTP Code
          input#otp.form__input(type='text', placeholder='Enter 6-digit code', required, minlength='6')
          
          //- حقل مخفي هنحط فيه الإيميل أوتوماتيك من الرابط
          input#email(type='hidden') 
          
        .form__group
          button.btn.btn--green Verify & Login