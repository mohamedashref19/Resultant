doctype html
html
  head
    block head
      meta(charset='UTF-8')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      title Restaurant | #{title}
      link(rel='stylesheet' href='/css/style.css')
      link(rel='shortcut icon' type='image/png' href='/img/logo.png')
      link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet")

  body
    // HEADER
    header.header
      nav.nav.nav--tours
        a.nav__el(href='/') All Meals
      
      .header__logo
        img(src='/img/logo.png' alt='Restaurant logo')

      nav.nav.nav--user
        if user
          a.nav__el.nav__el--logout Log out
          a.nav__el(href='/my-booking') My Bookings
          a.nav__el(href='/me') 
            img.nav__user-img(src=`/img/users/${user.photo || 'default.jpg'}` alt=`${user.name}`)
            span= user.name.split(' ')[0]
        else
          a.nav__el(href='/login') Log in
          a.nav__el.nav__el--cta(href='/signup') Sign up

    // CONTENT
    block content
      h1 This is a placeholder heading

    // FOOTER
    footer.footer
      .footer__logo
        img(src='/img/logo.png' alt='Restaurant logo')
      ul.footer__nav
        li: a(href='#') About us
        li: a(href='#') Download apps
        li: a(href='#') Become a guide
        li: a(href='#') Careers
        li: a(href='#') Contact
      p.footer__copyright &copy; 2025 by Mohamed Ashref. 

    script(src='https://js.stripe.com/v3/')
    script(src='/js/bundle.js')